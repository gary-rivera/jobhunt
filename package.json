    "@types/jest": "^30.0.0",
    "@types/node": "^24.1.0",
    "@types/pg": "^8.15.4",
    "@types/supertest": "^6.0.3",
    "@types/validator": "^13.15.2",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.4.0",
    "jest": "^30.0.5",
    "jest-environment-node": "^30.0.5",
    "jest-mock-extended": "^4.0.0",
    "jiti": "^2.5.1",
