{
  "name": "jobhunt-server",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check-all": "npm run lint && npm run format:check",
    "prisma:reset-migrations": "rm -rf prisma/migrations && prisma migrate reset --force && prisma migrate dev --name init && prisma generate",
    "prisma:seed": "ts-node prisma/seed.ts",
    "prisma:clean-start": "npm run prisma:reset-migrations && npm run prisma:seed"
  },
  "keywords": [],
